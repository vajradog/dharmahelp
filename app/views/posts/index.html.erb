<%= link_to '| New Post', new_post_path %><br>
<FrontLogo>Work in Progress</FrontLogo>



<%= form_tag posts_path, method: :get do %>
<div class="search-bar">
    <div class="search-and-submit">
        <%= text_field_tag :query, params[:query], placeholder: "search here"%>

      <button type="submit">
        <%= image_submit_tag("https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png", width:15, title: nil) %>

      </button>
    </div>
  </div>
<% end %>

<br>
<br>
<hr>


<article class="type-system-serif"> 
<% @posts.each do |post| %>
	<h4><%= link_to post.title, post_path(post) %></h4>
	<p><%= post.body %></p>

	<% if user_signed_in? %>
	<button><%= link_to 'Edit Post', edit_post_path(post)%></button>
	<%= link_to 'Delete Post', post, method: :delete, data: { confirm: "Are you sure?" } %>
	<% end %>
	<hr>
<% end %></article>

